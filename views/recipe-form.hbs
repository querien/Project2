<h1>Add your recipe</h1>
<form action="/recipes/recipe" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title"><br>

    <label for="ingredients">Ingredients</label>
    <input type="text" name="ingredients">

    <label for="description">Description</label>
    <input type="text" name="description"><br>

    <label for="duration">Duration</label>
    <input type="number" name="duration" id="duration"><br>

    <p>Dish type</p>
    <input type="radio" id="dinner" name="dish" value="dinner">
    <label for="dinner">Dinner</label><br>
    <input type="radio" id="lunch" name="dish" value="lunch">
    <label for="lunch">Lunch</label><br>
    <input type="radio" id="breakfast" name="dish" value="breakfast">
    <label for="breakfast">Breakfast</label>
    <input type="radio" id="dessert" name="dish" value="dessert">
    <label for="dessert">Dessert</label><br>

    <label for="servings">Servings</label>
    <input type="number" name="servings" id="servings"><br>
    <button type="submit">Submit</button>
</form>
