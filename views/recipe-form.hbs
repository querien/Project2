<h1>Add your recipe</h1>
<form action="/recipes/recipe" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title"><br>

    <label for="description">Description:</label><br>
    <textarea name="description" id="description" cols="50" rows="4"></textarea><br>

    <label for="ingredients">Please, fill in your ingredients separeted by a comma:</label><br>
    <textarea id="ingredients" name="ingredients" rows="4" cols="50">
    </textarea><br>

    <label for="directions">Directions:</label><br>
    <textarea name="directions" id="directions" cols="30" rows="10"></textarea><br>

    <label for="duration">Duration</label>
    <input type="text" name="duration" id="duration" placeholder="min"><br>

    <label for="dishes">Dish type</label>
    <select id="dishes" name="dishes">
        <option value="breakfast">Breakfast</option>
        <option value="lunch">Lunch</option>
        <option value="dinner">Dinner</option>
        <option value="dessert">Dessert</option>
    </select><br>

    <label for="servings">Serving size</label>
    <input type="number" name="servings" id="servings"><br>
    <button type="submit">Submit</button>
</form>
