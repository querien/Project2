<div class="pantrycontainer add-pantry">
  <h1>My Pantry</h1>

  <form action="/pantry/add" method="POST">
    <p>
      <label>Category</label> </br>
      <input type="text" name="category" id="category">
    </p>

    <label for="name">Ingredient name</label> </br>
    <input type="text" name="name">


    <p>
      <label>Availability</label> </br>
      <select name="availability" id="availability">
        <option value="I always have this ingredient">I always have this ingredient</option>
        <option value="I sometimes have this ingredient">I sometimes have this ingredient</option>

      </select>
    </p>

    <label for="amount">Amount</label> </br>
    <input type="number" min="1" name="amount" placeholder="Optional"> </br>

    <button type="submit">Enter ingredient</button>
  </form>

</div>