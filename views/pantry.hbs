<h1>My pantry</h1>

{{#each pantry}}
<p>{{name}}: {{amount}}</p>
<form action="/pantry/delete-ingredient/{{_id}}" method="POST">
    <button type="submit">Remove</button>
</form>

{{/each}}

<a href="/pantry/add">Add customized ingredient!</a>
<a href="/pantry/options">Add ingredients from a predefined list!</a>
