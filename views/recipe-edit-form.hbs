<div class="recipe-form">
    <h1>Edit your recipe</h1>
    <div class="recipe-form-content">
        <form action="/recipes/edit/{{recipe._id}}" method="POST">
            <label for="title">Title</label><br>
            <input type="text" name="title" placeholder="*required" value="{{recipe.title}}"><br>

            <label for="description">Description:</label><br>
            <textarea name="description" id="description" cols="50" rows="4">{{recipe.description}}</textarea><br>

            <label for="ingredients">Please, fill in your ingredients separated by a comma:</label><br>

            <textarea id="ingredients" name="ingredients" placeholder="*required" rows="4" cols="50">{{recipe.ingredients}}
        </textarea><br>

            <label for="directions">Directions:</label><br>
            <textarea name="directions" id="directions" placeholder="*required" cols="30"
                rows="10">{{recipe.directions}}</textarea><br>

            <label for="duration">Duration</label><br>
            <input type="text" name="duration" id="duration" value="{{recipe.duration}}"><br>

            <label for="dishes">Categories:</label><br>
            <select id="dishes" name="dishes">
                <option value="breakfast" {{selected "breakfast" recipe.dishes}}>Breakfast</option>
                <option value="lunch" {{selected "lunch" recipe.dishes}}>Lunch</option>
                <option value="dinner" {{selected "dinner" recipe.dishes}}>Dinner</option>
                <option value="dessert" {{selected "dessert" recipe.dishes}}>Dessert</option>
                <option value="main" {{selected "main" recipe.dishes}}>Main Courses</option>
                <option value="snacks" {{selected "snacks" recipe.dishes}}>Snacks and Appetizers</option>

            </select><br>

            <label for="servings">Serving size</label><br>
            <input type="number" min="1" name="servings" id="servings" value="{{recipe.servings}}"><br>
            <label for="images">Upload an image:</label><br>
            <input type="file" name="imageUrl" accept="image/png, image/jpg"><br>
            <button type="submit">Submit</button>
        </form>

    </div>

</div>
